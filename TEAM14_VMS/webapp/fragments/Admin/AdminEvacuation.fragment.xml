<core:FragmentDefinition xmlns:l="sap.ui.layout" xmlns:core="sap.ui.core" xmlns="sap.m"
	xmlns:custom="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1">
	<l:HorizontalLayout class="date">
		<Label class="datelabel" text="Date:"/>
		<DatePicker class="date" dateValue="{/date}"/>
	</l:HorizontalLayout>
	<l:VerticalLayout width="100%">
		<TextArea cols="50" rows="10" class="sapUiMediumMarginBegin sapUiMediumMarginTop sapUiSmallMarginEnd" placeholder="Type the Evacuation Message"></TextArea>
		<Button text="Send All" class="sapUiLargeMarginBegin sapUiMediumMarginTop" type="Default"></Button>
	</l:VerticalLayout>
</core:FragmentDefinition>