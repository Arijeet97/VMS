					<Input placeholder="Search" width="15%"></Input>
				</content>
			</OverflowToolbar>
		</headerToolbar>
		<columns>
			<Column minScreenWidth="Medium" demandPopin="true" hAlign="Left">
				<Text text="{i18n>MeetId}"/>
			</Column>
			<Column minScreenWidth="Medium" demandPopin="true" hAlign="Center">
				<Text text="{i18n>name}"/>
			</Column>
			<Column minScreenWidth="Medium" demandPopin="true" hAlign="Center">
				<Text text="{i18n>Contact}"/>
			</Column>
